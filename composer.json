{
  "name": "asminog/yii2-sentry",
  "description": "Yii2 logger for Sentry",
  "keywords": [
    "logger",
    "sentry",
    "yii2"
  ],
  "type": "yii2-extension",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "yiisoft/yii2": "^2.0",
    "sentry/sdk": "^3.0"
  },
  "require-dev": {
    "codeception/codeception": "^4.0",
    "codeception/module-yii2": "^1.1",
    "codeception/module-asserts": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "asminog\\yii2sentry\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "asminog\\yii2sentry\\tests\\": "tests"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "yiisoft/yii2-composer": true
    }
  }
}
